<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.hackthenorth.com.hackthenorth.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seconds"
        android:layout_alignBottom="@+id/inputWorkOutTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workOutText"
        android:layout_marginTop="54dp"
        android:text="Work Out Time: "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restText"
        android:text="Rest Time"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/minusButtonForWorkOut"
        android:layout_alignLeft="@+id/workOutText"
        android:layout_alignStart="@+id/workOutText"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/inputWorkOutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/workOutText"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/workOutText"
        android:layout_toRightOf="@+id/workOutText"
        android:ems="3"
        android:inputType="number" />

    <EditText
        android:id="@+id/inputRestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restText"
        android:layout_alignLeft="@+id/inputWorkOutTime"
        android:layout_alignStart="@+id/inputWorkOutTime"
        android:ems="3"
        android:inputType="number" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seconds"
        android:layout_alignBottom="@+id/inputRestTime"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/restText"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/plusButtonForWorkOut"
        android:textSize="15dp"
        android:background="#ffffff"
        android:layout_alignLeft="@+id/minusButtonForWorkOut"
        android:layout_alignStart="@+id/minusButtonForWorkOut"
        android:layout_above="@+id/minusButtonForWorkOut" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/minusButtonForWorkOut"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/inputWorkOutTime"
        android:layout_toEndOf="@+id/inputWorkOutTime" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/plusButtonForRest"
        android:background="#ffffff"
        android:textSize="15dp"
        android:text="+"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/minusButtonForWorkOut"
        android:layout_alignStart="@+id/minusButtonForWorkOut"
        android:layout_marginBottom="11dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:id="@+id/minusButtonForRest"
        android:text="-"
        android:textSize="15dp"
        android:layout_below="@+id/plusButtonForRest"
        android:layout_alignLeft="@+id/plusButtonForRest"
        android:layout_alignStart="@+id/plusButtonForRest" />


</RelativeLayout>
